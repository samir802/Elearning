@using ELearning.Models;
@{
    ViewData["Title"] = "Lesson Details";
    ProgressModel sqldata = ViewBag.sqldata;
}
<div class="justify-content-center">
    <div class="text-center mb-4">
        <h1 class="display-4">Progress List</h1>
    </div>
</div>

<div class="container mt-5">
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3">
        @foreach (var progress in sqldata.ProgressList)
        {
            <div class="col mb-4">
                <div class="card h-100 shadow">
                    <div class="card-body">
                        <h5 class="card-title">Student Name: @progress.StudentName</h5>
                        <p class="card-text">Course: @progress.CourseName</p>
                        <p class="card-text">Lesson: @progress.LessonTitle</p>
                        <p class="card-text">Status: @progress.LessonStatus</p>
                        @if (progress.LessonStatus == "Completed")
                        {
                            <div class="progress">
                                <div class="progress-bar bg-success" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                        }
                        else if (progress.LessonStatus == "In Progress")
                        {
                            <div class="progress">
                                <div class="progress-bar bg-warning" role="progressbar" style="width: 50%" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                        }
                        else
                        {
                            <div class="progress">
                                <div class="progress-bar" role="progressbar" style="width: 0%" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="text-center mt-4">
        <a href="@Url.Action("ProgressPage", "Home")" class="btn btn-primary"><i class="fas fa-arrow-left ml-1"></i> Back</a>
    </div>
</div>
