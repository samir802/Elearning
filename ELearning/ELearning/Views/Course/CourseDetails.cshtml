@model ELearning.Models.CourseModel

@{
    InstructorModel instructorModel = ViewBag.SqlData;

    
}


<div class="container">
    <p>Course:@Model.CourseName</p>
    <h1 class="mt-5 mb-4">Student Details</h1>
    <form method="post" asp-action="Update" asp-controller="Course">
        <div class="mb-3">
            <label for="courseId" class="form-label">Student ID:</label>
            <input type="text" class="form-control" id="courseId" name="CourseId" value="@Model.CourseId" readonly>
        </div>
        <div class="mb-3">
            <label for="courseName" class="form-label">Course Name:</label>
            <input type="text" class="form-control" id="courseName" name="CourseName" value="@Model.CourseName">
        </div>
        <div class="mb-3">
            <label for="countryDropdown" class="form-label">Instructor:</label>
            <select class="form-select" id="instructorDropdown" name="InstructorId">
                @foreach (var data in instructorModel.InstructorList)
                {
                    <option value="@data.InstructorId" selected="@(data.InstructorName == Model.InstructorName)">@data.InstructorName</option>
                }
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Update</button>
    </form>
</div>
